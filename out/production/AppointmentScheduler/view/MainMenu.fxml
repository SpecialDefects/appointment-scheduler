<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainMenuController">
   <children>
      <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="customersTabLabel">
               <content>
                  <Pane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <ButtonBar layoutX="321.0" layoutY="317.0" prefHeight="40.0" prefWidth="200.0">
                          <buttons>
                            <Button fx:id="addCustomerButton" mnemonicParsing="false" onAction="#handleCreateCustomer" />
                              <Button fx:id="modifyCustomerButton" mnemonicParsing="false" onAction="#handleModifyCustomer" />
                              <Button fx:id="deleteCustomerButton" mnemonicParsing="false" onAction="#handleDeleteCustomer" />
                          </buttons>
                        </ButtonBar>
                        <TableView fx:id="customerTable" layoutY="7.0" maxHeight="326.0" prefHeight="308.0" prefWidth="600.0">
                          <columns>
                            <TableColumn fx:id="customerName" prefWidth="145.0" text="Name" />
                            <TableColumn fx:id="customerAddress" minWidth="5.0" prefWidth="166.0" text="Address" />
                              <TableColumn fx:id="customerPostalCode" minWidth="0.0" prefWidth="123.0" text="Postal Code" />
                              <TableColumn fx:id="customerPhone" prefWidth="160.0" text="Phone Number" />
                          </columns>
                        </TableView>
                        <Label layoutX="20.0" layoutY="337.0" text="ID:" />
                        <Label fx:id="userID" layoutX="68.0" layoutY="337.0" />
                     </children>
                  </Pane>
               </content>
            </Tab>
          <Tab fx:id="appointmentsTabLabel" />
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
